@model IEnumerable<BballMVC.Models.Rotation>

@{
   ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
   <tr>
      <th> @Html.DisplayNameFor(model => model.GameDate) </th>
      <th> @Html.DisplayNameFor(model => model.RotNum) </th>
      <th> @Html.DisplayNameFor(model => model.Venue) </th>
      <th> @Html.DisplayNameFor(model => model.Team) </th>
