   @foreach (var item in Model)
   {
      <tr>

         <td> @Html.DisplayFor(modelItem => item.GameDate) </td>
         <td> @Html.DisplayFor(modelItem => item.RotNum) </td>
         <td> @Html.DisplayFor(modelItem => item.Venue) </td>
         <td> @Html.DisplayFor(modelItem => item.Team) </td>
         <td> @Html.DisplayFor(modelItem => item.Opp) </td>
