            @Html.DisplayFor(modelItem => item.TotalLineTeam)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.TotalLineOpp)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.OpenTotalLine)
         </td>

         <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
         </td>
         <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RotationID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RotationID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RotationID })
         </td>
      </tr>
   }

</table>
