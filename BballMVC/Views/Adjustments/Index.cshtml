<script src="~/AngularJS/Adjustments/AdjustmentsApp.js"></script>

<style>
   #AdjustmentsModal {
      width: 750px;
      height: 418px;
      background: #000000;
      text-align: center;
      position: fixed;
      left: 37.5%;
      top: 25%;
      z-index: 20;
      display: none;
      padding-top: 6px
   }

   #AdjustmentsList {
   }
</style>

<div ng-app="app" ng-controller="AdjustmentsController">
   <div class="container" id="AdjustmentsList">
      {{apptitle}} -

      <div class="row" style="margin-top: 10px;margin-bottom:10px;">
         <div class="col-md-8">
            <div class="btn-group">
               <button type="button" class="btn btn-info active" data-toggle="tooltip" title="Update">Update</button>
               <button type="button" class="btn btn-info"        data-toggle="tooltip" title="Add Adjustment">New</button>
            </div>

            <div class="btn-group">
               <button class="btn btn-default " type="button" data-toggle=" tooltip" title="Update" ng-click="ProcessUpdates()">
                  <span class="glyphicon glyphicon-pencil"></span>&nbsp;
               </button>
            </div>
            <div class="btn-group">
               <button class="btn btn-default " type="button" data-toggle="tooltip" title="Add Adjustment" 
                       ng-click="OpenAdjustmentEntryModal()" id="btOpenAdjustmentEntryModal">
                  <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;
               </button>
            </div>
         </div>

      </div>

      <div class="row">
         <div class="col-md-12">

            <div class="row">
               <div class="col-md-3">
                  <input type="checkbox" ng-model="cbShowZeroAdjustments" ng-checked="true" /> Show Zero Adjustments
               </div>
               <div class="col-md-3">
                  <input type="checkbox" ng-model="cbShowOverTimeAdjustments" ng-checked="true" /> Show Overtime Adjustments
               </div>
               <div class="col-md-6">
               </div>
            </div>
            <div class="table-responsive">
               <table id="mytable" class="table table-bordred table-striped">

                  <tr>
                     <th style="width:10%;">Update<br>Amount</th>
                     <th>Delete</th>

                     <th>Start Date</th>
                     <th>Adj Type</th>
                     <th>Team</th>
                     <th>Adjustment<br>Amount</th>

                     <th>Player</th>
                     <th>Description</th>
                     <th>Adjustment ID</th>
                  </tr>
                  <tbody id="adjustmentRows">
                  </tbody>
               </table>
            </div>
         </div>
      </div>

   </div>

   <div class="row " id="AdjustmentsModal">
      <div class="col-md-3">

      </div>
      <div class="col-md-12">
         <div class="panel panel-default">
            <div class="panel-heading text-center">
               Adjustment Entry

            </div>
            <div class="panel-body text-center">
               <!-- Adjustment Type / Team Dropdown -->
               <div class="row ">
                  <div class="col-md-2"></div>
                  <div class="col-md-5 col-sm-4 col-xs-3">
                     <span class="help-block text-muted small-font">Adjustment Type</span>
                     <select class="form-control" ng-model="AdjustmentType" id="AdjType"></select>
                  </div>
                  <div class="col-md-5 col-sm-4 col-xs-3">
                     <span class="help-block text-muted small-font">  Team</span>
                     <select class="form-control" ng-model="Team" id="Team"></select>
                  </div>
               </div>
               <div class="row ">
                  <div class="col-md-2"></div>
                  <div class="col-md-5 col-sm-3">
                     <span id="errAdjustmentType" style="display:none">Adjustment Type required</span>
                  </div>
                  <div class="col-md-5 col-sm-3">
                     <span id="errTeam"   >Team required</span>
                  </div>
               </div>
               <!-- Adjustment Amount -->
               <div class="row ">
                  <div class="col-md-2"></div>
                  <div class="col-md-5 pad-adjust col-sm-4">
                     <span class="help-block text-muted small-font pull-left">Adjustment Amount</span><br />
                     <input type="text" class="form-control" placeholder="Adjustment Amount" ng-model="AdjustmentAmount" id="AdjAmount" />
                  </div>
                  <div class="col-md-5 col-sm-3">
                     <span id="errAdjustmentAmount" style="display:none">Adjustment Amount required</span>
                  </div>
               </div>
               <!-- Player -->
               <div class="row ">
                  <div class="col-md-2"></div>
                  <div class="col-md-5 pad-adjust col-sm-3">
                     <span class="help-block text-muted small-font pull-left">  Player</span><br />
                     <input type="text" class="form-control" placeholder="Player" ng-model="Player" id="Player" />
                  </div>
                  <div class="col-md-5 col-sm-3">
                     <span id="errPlayer" style="display:none">Player required</span>
                  </div>
               </div>
               <!-- Description -->
               <div class="row ">
                  <div class="col-md-2"></div>
                  <div class="col-md-5 pad-adjust col-sm-4">
                     <span class="help-block text-muted small-font pull-left">  Description</span><br />
                     <input type="text" class="form-control" placeholder="Description" ng-model="Description" id="Description" />
                  </div>
                  <div class="col-md-5 col-sm-3">
                     <span id="errDescription" style="display:none">Descriptions required</span>
                  </div>
               </div>

               <div class="row ">
                  <div class="col-md-6">&nbsp;</div>
               </div>
               <div class="row ">
                  <div class="col-md-2"></div>
                  <div class="col-md-3 col-sm-3 col-xs-3 pad-adjust">
                     <input type="button" class="btn btn-danger" value="CANCEL" ng-click="CancelAdjustmentEntry()" />
                  </div>
                  <div class="col-md-5 col-sm-5 col-xs-5 pad-adjust">
                     <input type="button" class="btn btn-success btn-block" value="Update" ng-click="InsertAdjustment()" />
                  </div>
                  <div class="col-md-2"></div>
               </div>

            </div>
         </div>

      </div>
      <div class="col-md-3">

      </div>
      <div>
      </div>
   </div>
</div>


@section Scripts {
   @Scripts.Render("~/bundles/jqueryval")
}
