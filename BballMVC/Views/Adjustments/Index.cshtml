<script src="..\..\AngularJS\Adjustments\AdjustmentsApp.js"></script>

<div ng-app="app" ng-controller="appController">
   <div class="container">
      {{apptitle}} -
      <div class="row" style="margin-top: 10px;margin-bottom:10px;">
         <div class="col-md-8">
            <div class="btn-group">
               <button class="btn btn-info active" data-toggle="tooltip" title="Update" type="button">Update</button>
               <button class="btn btn-info" type="button" data-toggle="tooltip" title="Add Adjustment">New</button>
            </div>

            <div class="btn-group">
               <button class="btn btn-default " type="button" data-toggle=" tooltip" title="Update">
                  <span class="glyphicon glyphicon-pencil"></span>&nbsp;
               </button>
            </div>
            <div class="btn-group">
               <button class="btn btn-default " type="button" data-toggle="tooltip" title="Add Adjustment">
                  <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;
               </button>
            </div>


         </div>

      </div>

      <div class="row">
         <div class="col-md-12">

            <div class="row">
               <div class="col-md-3">
                  <input  type="checkbox" ng-model="cbShowZeroAdjustments" checked="true" /> Show Zero Adjustments
               </div>
               <div class="col-md-3">
                  <input type="checkbox" ng-model="cbShowOverTimeAdjustments" /> Show Overtime Adjustments
               </div>
               <div class="col-md-6">
               </div>
            </div>
            <div class="table-responsive">
               <table id="mytable" class="table table-bordred table-striped">

                  <thead>
                  <th>Update<br>Amount</th>
                  <th>Delete</th>

                  <th>Start Date</th>
                  <th>Adj Type</th>
                  <th>Team</th>
                  <th>Adjustment<br>Amount</th>

                  <th>Player</th>
                  <th>Description</th>
                  </thead>
                  <tbody>
                     <tr >
                        <td><input type="text" class="" /></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>

                        <td>01/20/2020</td>
                        <td>Injury</td>
                        <td>ATL</td>
                        <td>2.0</td>

                        <td>John Smith</td>
                        <td>Out</td>
                     </tr>
                     <tr ng-show="cbShowOverTimeAdjustments">
                        <td><input type="text" class="" /></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>

                        <td>01/20/2020</td>
                        <td>Overtime</td>
                        <td>ATL</td>
                        <td>2.0</td>

                        <td>John Smith</td>
                        <td>Out</td>
                     </tr>
                     <tr ng-show="cbShowZeroAdjustments">
                        <td><input type="text" class="" /></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p></td>

                        <td>01/20/2020</td>
                        <td>Injury</td>
                        <td>ATL</td>
                        <td>0</td>

                        <td>John Smith</td>
                        <td>Out</td>
                        </tr ng-show="cbShowZeroAdjustments>

                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>
